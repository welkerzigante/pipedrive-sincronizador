{
  "manifest_version": 3,
  "name": "Pipedrive Sincronizador",
  "description": "Sincronize informações do contato do AC no Pipedrive e consulte informações nos sistemas interno da Focus NFe",
  "version": "2.0",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": { "128": "icon128.png" }
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["https://*.pipedrive.com/deal/*"],
      "js": ["content_script.js"],
      "css": ["modal_style.css"]
    }
  ]
}